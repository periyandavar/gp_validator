{
    "name": "gp/validator",
    "description": "A validator package for php web application",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Periyandavar Ganesh",
            "email": "vickyperiyandavar@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "mockery/mockery": "^1.6",
        "gp/loader": "^2.0.10"
    },
    "autoload": {
        "psr-4": {
            "Validator\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Validator\\": "src//"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.72",
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1"
    }
}
